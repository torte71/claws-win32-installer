#!/bin/bash

# Find out which arch we're building for
topdir=`dirname $0`
topdir=${topdir/\/patches*/}
if [ -f ${topdir}/src/libgcc_s_seh-1.dll-x ]; then
	arch=x86_64
else
	arch=i686
fi

# GTK's README.win32 suggests removing gtk.def for 64-bit,
# to have it regenerated during build.
if [ "$arch" = "x86_64" ]; then
	echo Deleting gtk.def so that it can be regenerated for x86_64.
	rm gtk/gtk.def
fi

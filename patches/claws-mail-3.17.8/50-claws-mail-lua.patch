+ GList *walk;
+ int iAccount = 1;
+ for (walk = accounts_list; walk; walk = walk->next)
+  {luaC_pushobject(L,(void *)walk->data,ACCOUNT_OID);
+   lua_rawseti(L,-2,iAccount++);
+  }
+ return 1;
+}
